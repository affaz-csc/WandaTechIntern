@model RegisterUserVm
@{
    ViewData["Title"] = "Register";
}

<div class="text-center">
    <h1 class="display-4">Register with us</h1>
</div>

@if(ViewBag.ErrorMessage != null){
    <h2 class="text-danger">@ViewBag.ErrorMessage</h2>
}

<form asp-controller="Account" asp-action="Register" method="post">
    <div class="text-center" style="margin:0 auto;width:75%;text-align:center">
         <div class="form-group">
            <h3>Name</h3>
            <input type="name" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-primary"></span>
        </div>
        <div class="form-group">
            <h3>Email</h3>
            <input type="email" asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <h3>Phone</h3>
            <input type="phone" asp-for="Phone" class="form-control" />
        </div>
        <div class="form-group text-center">
            <h3>Password</h3>
            <input type="password" asp-for="Password" class="form-control" />
        </div>

        <br>
        <input type="submit" value="Sent OTP Code" class="btn btn-primary">
    </div>    
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}